{
  "identifier": "devjah.rails",
  "name": "Ruby on Rails ERB tags",
  "organization": "devjah",
  "description": "Ruby on Rails ERB tags switcher",
  "version": "1.0",
  "categories": ["commands"],
  
  "repository": "https://github.com/devjah/rails-nova",
  "bugs": "https://github.com/devjah/rails-nova/issues",

  "main": "main.js",

  "activationEvents": ["onLanguage:html"],

  "entitlements": {},

  "commands": {
    "editor": [
      {
        "title": "Rails ERB tag switcher",
        "command": "devjah.erbtag",
        "shortcut": "cmd-shift->",
        "when": "editorHasFocus"
      }
    ]
  }
}
